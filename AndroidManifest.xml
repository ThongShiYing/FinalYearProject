<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.healthwithme">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/iconapp"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:hardwareAccelerated="false"
        android:largeHeap="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">

        <activity
            android:name=".StartStretchingExercisePageActivity"
            android:exported="true"
            android:hardwareAccelerated="false"
            android:largeHeap="true"
            android:screenOrientation="landscape"/>
        <activity
            android:name=".StretchingExercisePageActivity"
            android:exported="true"
            android:hardwareAccelerated="false"
            android:largeHeap="true"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".StartTabataExercisePageActivity"
            android:exported="true"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activities.TabataExercisePageActivity"
            android:exported="true"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activities.ExerciseReminderPageActivity"
            android:exported="true"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activities.AddOtherFoodsActivity"
            android:exported="true"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activities.AddFoodPageActivity"
            android:exported="true"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activities.CaloriesRecorderPageActivity"
            android:exported="true"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activities.CaloriesHistoryPageActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.WaterHistoryPageActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.AddWaterPageActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.DrinkWaterReminderPageActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".EditInfo"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Test"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.ProfilePageActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.HomePageActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.UserLoginPageActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.UserRegisterPageActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver android:name=".WaterReminder" />
        <receiver android:name=".BreakfastRecord" />
        <receiver android:name=".LunchRecord" />
        <receiver android:name=".DinnerRecord" />
        <receiver android:name=".ExerciseRecord" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>